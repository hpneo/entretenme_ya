<div class="row">
  <h2 class="header light red-text text-lighten-2">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col s12" }) do |f| %>
    <div class="input-field col s12">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="input-field col s12">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="input-field col s12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="input-field col s12">
      <button type="submit" class="btn-large waves-effect light-blue" name="action">Iniciar sesi√≥n</button>
    </div>
  <% end %>

  <div class="row">
    <%= render "devise/shared/links" %>
  </div>
</div>