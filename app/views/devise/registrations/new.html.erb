<div class="row">
  <h2 class="header light red-text text-lighten-2">Registrarse</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col s12" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "(#{@minimum_password_length} caracteres como mÃ­nimo)" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <button type="submit" class="btn-large waves-effect light-blue" name="action">Registrarse</button>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>