<div class="row">
  <h2 class="header light red-text text-lighten-2">¿Olvidaste tu contraseña?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "col s12" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <button type="submit" class="btn-large waves-effect light-blue" name="action">Envíame correo con instrucciones</button>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>