<%
	if current_user
		@user_id  = current_user.id
		if @user.id == @user_id
%>
			<h1 class="header center light-blue-text">
				Editar Perfil
			</h1>
			<%= form_tag("/profile/update", method: "post") do %>
				<h5 class="header col s12 light">
				<%= hidden_field_tag(:id, @user.id) %>
				<p>Email</p>
				<%= text_field_tag(:email, @user.email) %>
				<p>New Password</p>
				<%= password_field_tag(:password) %>
				<p>New Re-Password</p>
				<%= password_field_tag(:repassword) %>
				<%= submit_tag("Actualizar") %>
				</h5>
<%
			end
		end
	else
%>
		<h1><center>NO PERMITIDO</center></h1>
<%
	end
%>